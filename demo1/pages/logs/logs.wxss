page{
  background: #1B1758;
}
.body {
  padding: 0px 50rpx;
}
.title0 {
  color: #25D4D0;
  font-size: 40rpx;
  font-weight: 900;
  margin-top: 34rpx;
  display: block;
}
.title2 {
  color: #d4d2d4;
  font-size: 30rpx;
